<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/jon_tyson"
    >
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    >

    <TextView
        android:id="@+id/activity_main_tv_p1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Player 1: 0"
        android:textSize="30sp"
        android:layout_margin="10dp"
        android:textColor="#000000"
        android:freezesText="true"/>

    <TextView
        android:id="@+id/activity_main_tv_p2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:text="Player 2: 0"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@id/activity_main_tv_p1"
        app:layout_constraintTop_toBottomOf="@id/activity_main_tv_p1"
        app:layout_constraintEnd_toEndOf="@id/activity_main_tv_p1"
        android:textColor="#000000"
        android:freezesText="true"
        />
    <Button
        android:id="@+id/activity_main_btn_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        app:layout_constraintTop_toTopOf="@id/activity_main_tv_p1"
        app:layout_constraintBottom_toBottomOf="@id/activity_main_tv_p2"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        android:textSize="20sp"
        />

    <Button
        android:id="@+id/activity_main_btn_00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="40dp"
        android:freezesText="true"
        android:textColor="#000000"
        android:textSize="60sp"
        app:layout_constraintStart_toEndOf="@id/activity_main_tv_p1"
        app:layout_constraintTop_toBottomOf="@id/activity_main_tv_p2"

        />

    <Button
        android:id="@+id/activity_main_btn_01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/activity_main_btn_00"
        app:layout_constraintBottom_toBottomOf="@id/activity_main_btn_00"
        app:layout_constraintStart_toEndOf="@id/activity_main_btn_00"
        android:layout_margin="20dp"
        android:textSize="60sp"
        android:textColor="#000000"
        android:freezesText="true"
        />

    <Button
        android:id="@+id/activity_main_btn_02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:freezesText="true"
        android:textColor="#000000"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="@id/activity_main_btn_00"
        app:layout_constraintStart_toEndOf="@id/activity_main_btn_01"
        app:layout_constraintTop_toTopOf="@id/activity_main_btn_00"
        />
    <Button
        android:id="@+id/activity_main_btn_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/activity_main_btn_00"
        app:layout_constraintEnd_toEndOf="@id/activity_main_btn_00"
        app:layout_constraintTop_toBottomOf="@id/activity_main_btn_00"
        android:layout_margin="20dp"
        android:textSize="60sp"
        android:textColor="#000000"
        android:freezesText="true"
        />
    <Button
        android:id="@+id/activity_main_btn_11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/activity_main_btn_10"
        app:layout_constraintBottom_toBottomOf="@id/activity_main_btn_10"
        app:layout_constraintStart_toEndOf="@id/activity_main_btn_10"
        android:layout_margin="20dp"
        android:textSize="60sp"
        android:textColor="#000000"
        android:freezesText="true"
        />
    <Button
        android:id="@+id/activity_main_btn_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/activity_main_btn_10"
        app:layout_constraintBottom_toBottomOf="@id/activity_main_btn_10"
        app:layout_constraintStart_toEndOf="@id/activity_main_btn_11"
        android:layout_margin="20dp"
        android:textSize="60sp"
        android:textColor="#000000"
        android:freezesText="true"
        />
    <Button
        android:id="@+id/activity_main_btn_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/activity_main_btn_00"
        app:layout_constraintEnd_toEndOf="@id/activity_main_btn_00"
        app:layout_constraintTop_toBottomOf="@id/activity_main_btn_10"
        android:layout_margin="20dp"
        android:textSize="60sp"
        android:textColor="#000000"
        android:freezesText="true"
        />
    <Button
        android:id="@+id/activity_main_btn_21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/activity_main_btn_20"
        app:layout_constraintBottom_toBottomOf="@id/activity_main_btn_20"
        app:layout_constraintStart_toEndOf="@id/activity_main_btn_20"
        android:layout_margin="20dp"
        android:textSize="60sp"
        android:textColor="#000000"
        android:freezesText="true"
        />
    <Button
        android:id="@+id/activity_main_btn_22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/activity_main_btn_20"
        app:layout_constraintBottom_toBottomOf="@id/activity_main_btn_20"
        app:layout_constraintStart_toEndOf="@id/activity_main_btn_21"
        android:layout_margin="20dp"
        android:textSize="60sp"
        android:textColor="#000000"
        android:freezesText="true"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>